<Window x:Class="Diplom.View.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.View"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400" Style="{StaticResource StyleWindow}" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Width="300" Margin="10" Orientation="Vertical">
            <TextBlock Margin="5">Логин:</TextBlock>
            <TextBox Style="{StaticResource DefaultTextBox}" Name="login"></TextBox>
            <TextBlock Margin="5">Пароль:</TextBlock>
            <PasswordBox Margin="5" Name="password"></PasswordBox>

            <Button Style="{StaticResource DefaultButton}"  Click="Button_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Window>
