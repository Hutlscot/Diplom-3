<Window x:Class="Diplom.View.AddHardwareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.View"
        mc:Ignorable="d"
        Title="Добавление оборудования" Height="450" Width="500" Style="{StaticResource StyleWindow}">
    <Grid>
        <StackPanel Orientation="Vertical" Width="300">
            <TextBlock Style="{StaticResource TextCenter}">Введите данные оборудования</TextBlock>
            <TextBox Style="{StaticResource DefaultTextBox}">Название</TextBox>
            <TextBox Style="{StaticResource DefaultTextBox}">Серийный номер</TextBox>
            <ComboBox>Выберите группу</ComboBox>
        </StackPanel>
    </Grid>
</Window>
